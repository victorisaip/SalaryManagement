<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_for_employees"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.victo.salarymanagement.Activities.MainMenuForEmployees">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="300dp"
            android:src="@drawable/paisaje_natural"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select one option: "
        android:textSize="17dp"/>

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:layout_height="80dp"
        android:text="Register timesheet"
        android:id="@+id/btnRegisterTimeSheet"
        android:onClick="registerTimeSheet"/>
    <Button
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:layout_height="80dp"
        android:id="@+id/btnSeeHistory"
        android:text="See history"
        android:onClick="seeHistory"/>

</LinearLayout>
