<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.victo.salarymanagement.Fragments.DetailEmployeeFragment">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:id="@+id/cv_title_employee"
        style="@style/Title_style">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employee Information"
            android:textSize="20dp"
            android:id="@+id/tvEmpInformation"
            android:visibility="visible"/>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        style="@style/EmployeeCardViewStyle"
        app:cardElevation="3dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/cv_detail_employee"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Name: "
                android:visibility="invisible"
                android:id="@+id/tvEmpName"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:visibility="invisible"
                android:id="@+id/etEmployeeName"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:textSize="17dp"
                android:id="@+id/tvEmpMail"
                android:text="Email: "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:textSize="17dp"
                android:id="@+id/etEmployeeEmail"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvEmpExpLevel"
                android:textSize="17dp"
                android:visibility="invisible"
                android:text="Experience level: "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:visibility="invisible"
                android:id="@+id/etEmployeeExperience"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:textSize="17dp"
                android:text="State: "
                android:id="@+id/tvEmpState"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:visibility="invisible"
                android:id="@+id/etEmployeeState"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Unsuscribe employee"
                    android:id="@+id/btnDeleteEmployee"
                    android:visibility="invisible"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:textSize="17dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:id="@+id/btnUpdateEmployee"
                    android:visibility="invisible"
                    android:text="Update employee"/>

            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
