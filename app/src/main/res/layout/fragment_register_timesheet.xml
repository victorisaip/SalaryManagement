<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_register_timesheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.victo.salarymanagement.Fragments.RegisterTimesheetFragment">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/DetailTimesheetCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start date:" />

                    <EditText
                        android:id="@+id/etStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:inputType="date" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End date:" />

                    <EditText
                        android:id="@+id/etEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="date" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvApproveer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approver:" />

                <Spinner
                    android:id="@+id/SpinSelectApprover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/DetailTimesheetCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>

                        <TextView
                            android:id="@+id/tvDaysOfWeek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:text="Days of the week:"></TextView>

                        <TextView
                            android:layout_marginLeft="100dp"
                            android:id="@+id/tvHours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:text="Hours:"></TextView>
                    </TableRow>
                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tvMonday"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:text="Monday"></TextView>

                        <EditText
                            android:layout_marginLeft="100dp"
                            android:id="@+id/etMonday"
                            android:inputType="numberDecimal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2">

                        </EditText>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTuesday"
                            android:layout_column="1"
                            android:text="Tuesday"></TextView>

                        <EditText
                            android:layout_marginLeft="100dp"
                            android:id="@+id/etTuesday"
                            android:inputType="numberDecimal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2">

                        </EditText>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tvWednesday"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:text="Wednesday"></TextView>

                        <EditText
                            android:id="@+id/etWednesday"
                            android:layout_marginLeft="100dp"
                            android:inputType="numberDecimal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2">

                        </EditText>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tvThursday"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:text="Thursday"></TextView>

                        <EditText
                            android:id="@+id/etThursday"
                            android:layout_marginLeft="100dp"
                            android:inputType="numberDecimal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2">

                        </EditText>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tvFriday"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:text="Friday"></TextView>

                        <EditText
                            android:id="@+id/etFriday"
                            android:inputType="numberDecimal"
                            android:layout_marginLeft="100dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2"></EditText>
                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>


        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/DetailTimesheetCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvNumberOfHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total of hours:" />

                <EditText
                    android:id="@+id/etNumberOfHours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:" />

                <EditText
                    android:id="@+id/etStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tvActualDate"
                    android:layout_height="wrap_content"
                    android:text="Actual date:" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etActualDate"/>



            </LinearLayout>
        </LinearLayout>

        </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnRegisterTimeSheet"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Register timesheet" />
        <Button
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Send Email"
            android:id="@+id/btnSendEmail"/>
    </LinearLayout>

</LinearLayout>
